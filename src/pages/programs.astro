---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import ProgramPost from "../components/ProgramPost.astro";
const allPrograms = await getCollection("programs");
const pageTitle = "Programs Funded by the BHS Innovation Fund";
---

<BaseLayout pageTitle={pageTitle}>
  <ul>
    {
      allPrograms.map((program: any) => (
        <ProgramPost
          url={`/programs/${program.id}/`}
          title={program.data.title}
          image={program.data.image2.src}
        />
      ))
    }
  </ul>
</BaseLayout>
